<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#1F193D"
    >


    <ImageView
        android:id="@+id/img_big_circle"
        android:layout_width="@dimen/_275sdp"
        android:layout_height="@dimen/_250sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:src="@drawable/bgcircle"
        />

    <ImageView
        android:id="@+id/img_icanchor"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_340sdp"
        android:padding="10dp"
        android:src="@drawable/icanchor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <Chronometer
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_35ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_big_circle"
        />

    <Button
        android:id="@+id/btn_start_now"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_75sdp"
        android:background="@drawable/bacground_button_start"
        android:text="Start Watch"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_25ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_icanchor"
        app:layout_constraintVertical_bias="0.127" />

    <Button
        android:id="@+id/btn_stop_now"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_75sdp"
        android:background="@drawable/bacground_button_stop"
        android:text="Stop Watch"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_25ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.702"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_now"
        app:layout_constraintVertical_bias="0.343"
        />

</androidx.constraintlayout.widget.ConstraintLayout>